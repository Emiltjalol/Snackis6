@model Snackis6.Pages.Messages.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}



<h2>Are you sure you want to delete this message?</h2>
<div>

    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Message.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Message.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Recieved at")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Message.Timestamp)
        </dd>

    </dl>

    <form method="post">
        <input type="hidden" asp-for="Message.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> <br /><br />
