@page
@model Snackis6.Pages.Messages.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Message</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Message.Id" />
            <div class="form-group">
                <label asp-for="Message.SenderId" class="control-label"></label>
                <select asp-for="Message.SenderId" class="form-control" asp-items="ViewBag.SenderId"></select>
                <span asp-validation-for="Message.SenderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.RecipientId" class="control-label"></label>
                <select asp-for="Message.RecipientId" class="form-control" asp-items="ViewBag.RecipientId"></select>
                <span asp-validation-for="Message.RecipientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.Content" class="control-label"></label>
                <input asp-for="Message.Content" class="form-control" />
                <span asp-validation-for="Message.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.Timestamp" class="control-label"></label>
                <input asp-for="Message.Timestamp" class="form-control" />
                <span asp-validation-for="Message.Timestamp" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Message.IsRead" /> @Html.DisplayNameFor(model => model.Message.IsRead)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
