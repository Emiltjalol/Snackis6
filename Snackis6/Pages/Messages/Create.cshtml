@page
@model Snackis6.Pages.Messages.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Message</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <input type="hidden" asp-for="Message.SenderId" />
                <span asp-validation-for="Message.SenderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.RecipientId" class="control-label">Reciever</label>
                <select asp-for="Message.RecipientId" class="form-control" asp-items="ViewBag.RecipientId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Message.Content" class="control-label">Message</label>
                <input asp-for="Message.Content" class="form-control" />
                <span asp-validation-for="Message.Content" class="text-danger"></span><br />
            </div>
            <div class="form-group">
                <input type="submit" value="Send message" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-page="/messages/index" class="btn btn-dark ">Back to messages</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
