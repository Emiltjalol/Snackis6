@page
@model Snackis6.Pages.Messages.Admin.AdminSubCategory.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
@if (User.IsInRole("Admin"))
{


    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <h1>Subcategories</h1><br />
            </div>
            <div>
                <a asp-page="Create" class="btn btn-success">Add New subcategory</a>
            </div>
        </div>

        <div class="row mt-3">
            @foreach (var item in Model.Subcategory)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <h5 class="card-title">@item.Name</h5>
                            <div class="mt-3">
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning me-2">Edit</a>
                                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <h1 class="text-center">Sorry, this page is for admins only!</h1>
}
