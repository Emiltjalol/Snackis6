@page
@model Snackis6.Pages.Admin.AdminReports.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
@if (User.IsInRole("Admin"))
{
    

<div class="container mt-5">
    <h1 class="mb-4">Reports</h1>

    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Reason</th>
                    <th scope="col">Reporter</th>
                    <th scope="col">Reported User</th>
                    <th scope="col">Reported Comment</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Reported)
                {
                    <tr>
                        <td>@item.Reason</td>
                        <td>@item.Reporter.DisplayName</td>
                        <td>@item.ReportedUser.DisplayName</td>
                        <td>@item.Comment.CommentContent</td>
                        <td>                         
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete report</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    </div>
}
else
{
    <h1 class="text-center">Sorry, this page is for admins only!</h1>
}