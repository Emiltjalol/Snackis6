@page
@model Snackis6.Pages.Comments.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}



<h3>Are you sure you want to delete this comment?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Comment")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comment.CommentContent)
        </dd>

    </dl>

    <form method="post">
        <input type="hidden" asp-for="Comment.Id" />
        <input type="submit" value="Delete comment" class="btn btn-danger" /> <br /><br />
        <a asp-page="/posts/index" class="btn btn-primary">Back to List</a>
    </form>
</div>
